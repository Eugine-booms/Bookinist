<UserControl x:Class="Bookinist.View.BuyerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bookinist.View" 
             xmlns:viewmodels="clr-namespace:Bookinist.ViewModels"
             d:DataContext="{d:DesignInstance {x:Type viewmodels:BuyersViewModel}}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock Text="Покупатели" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="90">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="3"/>
            </TextBlock.Effect>
        </TextBlock>
    </Grid>
</UserControl>
